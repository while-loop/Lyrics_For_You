<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lyics4me.lyrics4u"
    android:versionCode="13"
    android:versionName="1.12.01" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        
        <activity
            android:name=".Splash"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Loading"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="com.lyrics4me.lyrics4u.LOADING" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Lyrics"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="com.lyrics4me.lyrics4u.LYRICS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Youtube"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="com.lyrics4me.lyrics4u.YOUTUBE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChangeLog"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="com.lyrics4me.lyrics4u.CHANGELOG" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainScreen"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="com.lyrics4me.lyrics4u.STARTINGPOINT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>